<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/actionBar</item>
        <item name="colorAccent">#fff</item>
    </style>



   <style name="titleOfProduct">
       <item name="android:textColor">#000</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textSize">15sp</item>
   </style>


    <style name="priceOfProduct">
        <item name="android:textColor">#f00</item>
    </style>

    <style name="confirmPage">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="text">
        <item name="android:fontFamily">@font/yekan</item>
    </style>

    <style name="text1">
        <item name="android:textColor">#000</item>

    </style>

    <style name="loginButtons">
        <item name="android:background">@color/actionBar</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="logo">
        <item name="android:fontFamily">@font/ordi</item>
        <item name="android:textSize">45dp</item>
        <item name="android:textColor">@color/actionBar</item>
    </style>

    <style name="driverPage">
        <item name="android:textSize">25dp</item>
        <item name="android:fontFamily">@font/yekan</item>
        <item name="android:textColor">@color/actionBar</item>
    </style>
</resources>
